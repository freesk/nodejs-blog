nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') NodeJS Blog
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title === 'Home' ? 'active' : ''))
          a(href='/') Home
        li(class=(title === 'Blog' ? 'active' : ''))
          a(href='/blog') Blog
        li(class=(title === 'Categories' ? 'active' : ''))
          a(href='/blog/categories') Categories
        // show these only if user is not logged in
        if user
          li(class=(title === 'New Post' ? 'active' : ''))
            a(href='/blog/posts/add') Add Post
          li(class=(title === 'New Category' ? 'active' : ''))
            a(href='/blog/categories/add') Add Category

      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Login' ? 'active' : ''))
            a(href='/users/login') Login
          li(class=(title === 'Register' ? 'active' : ''))
            a(href='/users/register') Register
        // show this only if user is logged
        if user
          li
            a(href='/users/logout') Logout
